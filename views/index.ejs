    <section id="servicios" class="services-section">
        <h2 class="section-title">Nuestros Servicios Estrella</h2>
        
        <div class="services-grid">
           
            <article class="service-card">
                <div class="service-icon">
                    <i class="fas fa-video"></i>
                </div>
                <h3 class="service-title">Videovigilancia HD</h3>
                <ul class="service-features">
                    <li>Visibilidad nocturna</li>
                    <li>Detección de movimiento</li>
                    <li>Almacenamiento en la nube</li>
                </ul>
            </article>

            <article class="service-card">
                <div class="service-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <h3 class="service-title">Sistema de Alarmas</h3>
                <ul class="service-features">
                    <li>Alertas inmediatas</li>
                    <li>Conexión a central</li>
                    <li>Activación remota</li>
                </ul>
            </article>
            <article class="service-card">
