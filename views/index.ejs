        <div class="testimonials-carousel">
            <article class="testimonial-card">
                <div class="client-info">
                    <div class="client-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <h4 class="client-name">Familia González</h4>
                    <div class="client-rating">
